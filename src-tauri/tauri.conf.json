{
  "$schema": "../../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "one-thing-focus",
  "version": "0.1.0",
  "identifier": "com.gusttavocastro.onethingfocus",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run start",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "one-thing-focus",
        "width": 1024,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minHeight": 600,
        "minWidth": 890
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "main"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "nsis", "msi", "app", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}